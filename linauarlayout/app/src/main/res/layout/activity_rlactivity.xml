<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_css"
    tools:context=".RLactivity">

    <TextView
        android:id="@+id/tvcenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="center"
        android:textSize="25dp"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:background="#9C27B0"/>
<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="center vertical"-->
<!--        android:textSize="25dp"-->
<!--        android:layout_centerVertical="true"-->
<!--        android:background="@color/black"-->
<!--        android:textColor="#00BCD4"/>-->
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="center horizontal"
        android:textSize="25dp"
        android:background="#FF5722"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btnabove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="above"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_above="@id/tvcenter"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="below"
        android:layout_below="@id/tvcenter"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="left"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tvcenter"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tvcenter"
        android:layout_margin="10dp"
        />
</RelativeLayout>